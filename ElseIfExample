import java.io.*;
import java.util.*;
public class ElseIfExample
{
    public static void main(String  avgs[])
    {
     Scanner sc=new Scanner(System.in);
        System.out.println("Enter the marks of 3 students");
         int s1=sc.nextInt();
         int s2=sc.nextInt();
         int s3=sc.nextInt();
         int total=s1+s2+s3;
         float avg=total/3;
    System.out.println("The total marks of student is");
    if(avg>=75)
    {
        if(avg>=95)
        {
            System.out.println("your avg is top 5%");
        }
        else if(avg>=90)
        {
            System.out.println("your avg is top 10%");
        }
        else
        {
            System.out.println("student average is"+avg+"student passed with distinction");
        }
        System.out.println("student avg is"+avg+"student passed with first class" );
    }
    else if(avg>=60&&avg<=75)
    {
        System.out.println("student avg is"+avg+"student passed with second class");
    }
